<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".network.ui.EmailSentFragment">

    <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/emailSentTitleTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:text="@string/email_sent_description"
    />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        style="@style/roundButton"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/emailSentTitleTextView"
        app:layout_constraintLeft_toLeftOf="@+id/emailSentTitleTextView"
        app:layout_constraintRight_toRightOf="@+id/emailSentTitleTextView"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/emailSentNoteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/okButton"
        android:text="@string/email_sent_note"
        />

</androidx.constraintlayout.widget.ConstraintLayout>