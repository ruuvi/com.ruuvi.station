<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fi.ruuvi.android">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RuuviScannerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="fi.ruuvi.android.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fi.ruuvi.android.ListActivity"
            android:label="@string/title_activity_list"
            android:parentActivityName="fi.ruuvi.android.MainActivity" />
        <activity
            android:name="fi.ruuvi.android.database.AndroidDatabaseManager"
            android:parentActivityName="fi.ruuvi.android.MainActivity" />
        <activity
            android:name="fi.ruuvi.android.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="fi.ruuvi.android.MainActivity" />

        <service
            android:name="fi.ruuvi.android.ScannerService"
            android:exported="false" />

        <activity
            android:name="fi.ruuvi.android.EditActivity"
            android:label="Edit Ruuvitag"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="fi.ruuvi.android.MainActivity" />
        <activity
            android:name="fi.ruuvi.android.PlotActivity"
            android:label=""
            android:parentActivityName="fi.ruuvi.android.MainActivity" />
        <activity
            android:name="fi.ruuvi.android.AlarmEditActivity"
            android:label="Edit Alarm"
            android:parentActivityName="fi.ruuvi.android.EditActivity"/>
    </application>

</manifest>